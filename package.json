{
  "name": "windowsterminalthemes",
  "version": "1.0.0",
  "private": true,
  "description": "monorepo for windowsterminalthemes client and api",
  "main": "index.js",
  "workspaces": [
    "app",
    "server"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cy:open": "yarn run cypress open",
    "cy:run": " percy exec -- cypress run",
    "app": "yarn workspace @windowsterminalthemes/app start",
    "server": "yarn workspace @windowsterminalthemes/server dev",
    "start": "concurrently --kill-others-on-fail \"yarn server\"  \"yarn app\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atomcorp/terminal.git"
  },
  "keywords": [
    "windowsterminalthemes",
    "windows terminal",
    "themes"
  ],
  "author": "atomcorp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atomcorp/terminal/issues"
  },
  "homepage": "https://github.com/atomcorp/terminal#readme",
  "devDependencies": {
    "@percy/cypress": "^2.3.1",
    "@testing-library/cypress": "^6.0.0",
    "concurrently": "^5.2.0",
    "cypress": "^4.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5"
  }
}
